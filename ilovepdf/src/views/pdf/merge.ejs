<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title mb-3">Merge PDFs</h5>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="post" action="/pdf/merge" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Upload PDFs</label>
            <input type="file" class="form-control" name="pdfs" accept="application/pdf" multiple required>
          </div>
          <button class="btn btn-primary">Merge</button>
        </form>
      </div>
    </div>
  </div>
</div>

