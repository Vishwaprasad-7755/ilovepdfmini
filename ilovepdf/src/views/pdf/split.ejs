<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title mb-3">Split PDF</h5>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="post" action="/pdf/split" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Upload PDF</label>
            <input type="file" class="form-control" name="pdf" accept="application/pdf" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Page ranges (e.g., 1-3,5,7-9)</label>
            <input type="text" class="form-control" name="ranges" placeholder="1-2,4,6-8" required>
          </div>
          <button class="btn btn-primary">Split</button>
        </form>
      </div>
    </div>
  </div>
</div>

