<section class="hero text-center">
  <div class="hero-inner">
    <h1 class="display-5 fw-bold gradient-text mb-2">Welcome, <%= (user && user.name) || 'Creator' %></h1>
    <p class="lead text-muted mb-0">Fast, private, and beautiful PDF tools. All in your browser.</p>
  </div>
</section>

<div class="tools-stack mt-3">
  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <div class="tool-card tool-card--large card shadow-sm w-100">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center gap-3">
          <div class="tool-icon tool-icon--xl mb-2 mb-md-0"><i class="bi bi-files"></i></div>
          <div class="flex-grow-1">
            <h3 class="card-title mb-1">Merge PDFs</h3>
            <p class="text-muted mb-0">Combine multiple PDFs into a single polished document.</p>
          </div>
          <div>
            <a href="/pdf/merge" class="btn btn-gradient btn-lg">Open</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <div class="tool-card tool-card--large card shadow-sm w-100">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center gap-3">
          <div class="tool-icon tool-icon--xl mb-2 mb-md-0"><i class="bi bi-scissors"></i></div>
          <div class="flex-grow-1">
            <h3 class="card-title mb-1">Split PDF</h3>
            <p class="text-muted mb-0">Extract exact pages or ranges into a new file.</p>
          </div>
          <div>
            <a href="/pdf/split" class="btn btn-gradient btn-lg">Open</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <div class="tool-card tool-card--large card shadow-sm w-100">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center gap-3">
          <div class="tool-icon tool-icon--xl mb-2 mb-md-0"><i class="bi bi-image"></i></div>
          <div class="flex-grow-1">
            <h3 class="card-title mb-1">Images → PDF</h3>
            <p class="text-muted mb-0">Turn multiple images into a single, shareable PDF.</p>
          </div>
          <div>
            <a href="/pdf/images-to-pdf" class="btn btn-gradient btn-lg">Open</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="col-12">
      <div class="tool-card tool-card--large card shadow-sm w-100">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center gap-3">
          <div class="tool-icon tool-icon--xl mb-2 mb-md-0"><i class="bi bi-file-earmark-word"></i></div>
          <div class="flex-grow-1">
            <h3 class="card-title mb-1">Word → PDF</h3>
            <p class="text-muted mb-0">Convert .docx documents into clean, print-ready PDFs.</p>
          </div>
          <div>
            <a href="/pdf/word-to-pdf" class="btn btn-gradient btn-lg">Open</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

